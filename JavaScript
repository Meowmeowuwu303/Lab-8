// Task 1: iterate(object, callback)
function iterate(object, callback) {
  for (let key in object) {
    if (object.hasOwnProperty(key)) {
      callback(key, object[key], object);
    }
  }
}

// Task 2: store(value)
function store(value) {
  return function() {
    return value;
  };
}

// Task 3: contract(fn, ...types)
function contract(fn, ...types) {
  return function(...args) {
    // Перевіряємо типи аргументів (всі крім останнього типу)
    for (let i = 0; i < args.length; i++) {
      const expectedType = types[i];
      const actualType = typeof args[i];
      
      if (expectedType.name.toLowerCase() !== actualType) {
        throw new TypeError(
          `Argument ${i} must be ${expectedType.name}, but got ${actualType}`
        );
      }
    }
    
    // Викликаємо оригінальну функцію
    const result = fn(...args);
    
    // Перевіряємо тип результату (останній тип у масиві types)
    const expectedResultType = types[types.length - 1];
    const actualResultType = typeof result;
    
    if (expectedResultType.name.toLowerCase() !== actualResultType) {
      throw new TypeError(
        `Result must be ${expectedResultType.name}, but got ${actualResultType}`
      );
    }
    
    return result;
  };
}


// ============= ТЕСТУВАННЯ =============

console.log('=== Task 1: iterate ===');
const obj = { a: 1, b: 2, c: 3 };
iterate(obj, (key, value) => {
  console.log({ key, value });
});
// Output:
// { key: 'a', value: 1 }
// { key: 'b', value: 2 }
// { key: 'c', value: 3 }


console.log('\n=== Task 2: store ===');
const read = store(5);
const value = read();
console.log(value); // Output: 5

const read2 = store('Hello');
console.log(read2()); // Output: Hello


console.log('\n=== Task 3: contract ===');

// Приклад 1: addNumbers
const add = (a, b) => a + b;
const addNumbers = contract(add, Number, Number, Number);
const res1 = addNumbers(2, 3);
console.log(res1); // Output: 5

// Приклад 2: concatStrings
const concat = (s1, s2) => s1 + s2;
const concatStrings = contract(concat, String, String, String);
const res2 = concatStrings('Hello ', 'world!');
console.log(res2); // Output: Hello world!

// Приклад 3: Помилка типу (TypeError)
console.log('\n--- Testing TypeError ---');
try {
  const wrongResult = addNumbers('2', 3); // Передали string замість number
} catch (error) {
  console.log('Error caught:', error.message);
}

try {
  const wrongResult2 = concatStrings(123, 456); // Передали numbers замість strings
} catch (error) {
  console.log('Error caught:', error.message);
}
